<%= simple_form_for critical_learning,
                    url:  critical_learning.new_record? ?
                            referential_critical_learnings_path(@referential)
                            : referential_critical_learning_path(@referential, critical_learning) do |f| %>
  <div class="row">
    <div class="col-md-2">
      <%= f.input :number,
                  label: 'Numéro'%>
    </div>
    <div class="col-md-10">
      <%= f.input :description %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <%= f.input :not_reached, label: 'Non atteint' %>
    </div>
    <div class="col-md-3">
      <%= f.input :partially_reached, label: 'Partiellement atteint' %>
    </div>
    <div class="col-md-3">
      <%= f.input :reached, label: 'Atteint' %>
    </div>
    <div class="col-md-3">
      <%= f.input :over_reached, label: 'Dépassé' %>
    </div>
  </div>
  <%= f.association :competency, as: :hidden %>
  <%= f.association :level, as: :hidden %>
  <%= save_button f %>
  <%= destroy_button critical_learning, referential_critical_learning_path(@referential, critical_learning) %>
<% end %>
