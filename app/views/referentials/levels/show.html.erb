<%= content_for :title, "#{@level}" %>

<div class="row">
  <div class="col-md-4">
    <%= simple_format @level.description %>
    <%= edit_button [@referential, @level] %>
  </div>
  <div class="col-md-4">
    <h4>Situations</h4>
    <ul class="list-unstyled">
      <% @situations.each do |situation| %>
        <li><%= link_to situation, referential_situation_path(@referential, situation) %></li>
      <% end %>
    </ul>
    <%= create_button @new_situation, new_referential_situation_path(@referential, level_id: @level.id) %>
  </div>
</div>


<div class="row mt-5">
  <% @competencies.each do |competency| %>
    <div class="col-md-4 mb-5">
      <hr>
      <p class="badge badge-primary"><%= competency %></p>
      <p><b><%= link_to competency.name, referential_competency_path(@referential, competency) %></b></p>
      <ul class="list-unstyled">
        <% competency.critical_learnings.with_level(@level).each do |critical_learning| %>
          <li><%= link_to critical_learning, referential_critical_learning_path(@referential, critical_learning) %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>
