<%= content_for :title, 'Formations' %>

<table class="table">
  <thead>
    <tr>
      <th>Nom</th>
      <th>Ville</th>
      <th>Pays</th>
      <th>Référentiel</th>
    </tr>
  </thead>

  <tbody>
    <% @programs.each do |program| %>
      <tr>
        <td><%= link_to program, program %></td>
        <td><%= program.city %></td>
        <td><%= program.country_full %></td>
        <td><%= link_to program.referential, program.referential %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= create_button @new_program, new_program_path %>
