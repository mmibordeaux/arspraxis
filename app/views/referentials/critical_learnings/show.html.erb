<%= content_for :title, "#{@critical_learning}" %>
<div class="row">
  <div class="col-md-6">
    <%= simple_format @critical_learning.description %>
    <%= edit_button [@referential, @critical_learning] %>
  </div>
</div>

<div class="row">
  <div class="col-md-3">
    <h3>Non atteint</h3>
    <%= simple_format @critical_learning.not_reached %>
  </div>
  <div class="col-md-3">
    <h3>Partiellement atteint</h3>
    <%= simple_format @critical_learning.partially_reached %>
  </div>
  <div class="col-md-3">
    <h3>Atteint</h3>
    <%= simple_format @critical_learning.reached %>
  </div>
  <div class="col-md-3">
    <h3>Dépassé</h3>
    <%= simple_format @critical_learning.over_reached %>
  </div>
</div>
