<%= content_for :title, 'Ressources' %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @resources.each do |resource| %>
      <tr>
        <td><%= resource.name %></td>
        <td><%= resource.description %></td>
        <td>
          <%= show_button [@referential, resource] %>
          <%= edit_button [@referential, resource] %>
          <%= destroy_button [@referential, resource] %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= create_button Referential::Resource %>
