<%= simple_form_for level,
                    url:  level.new_record? ? referential_levels_path(@referential)
                            : referential_level_path(@referential, level) do |f| %>
  <div class="row">
    <div class="col-md-1">
      <%= f.input :number %>
    </div>
    <div class="col-md-2">
      <%= f.association :competency, collection: @referential.competencies %>
    </div>
    <div class="col-md-3">
      <%= f.input :name %>
    </div>
    <div class="col-md-6">
      <%= f.input :description, input_html: { rows: 2 }%>
    </div>
  </div>
  <%= f.association :referential, as: :hidden %>
  <%= save_button f %>
  <%= destroy_button [@referential, level] %>
<% end %>
