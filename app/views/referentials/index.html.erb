<%= content_for :title, 'Référentiels' %>

<table class="table">
  <thead>
    <tr>
      <th>Nom</th>
      <th>Origine</th>
    </tr>
  </thead>

  <tbody>
    <% @referentials.each do |referential| %>
      <tr>
        <td><%= link_to referential, referential %></td>
        <td><%= referential.origin %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Créer un référentiel', new_referential_path, class: 'btn btn-primary btn-sm' %>
