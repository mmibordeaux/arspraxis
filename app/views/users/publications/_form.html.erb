<%= simple_form_for publication,
                    url:  publication.new_record? ? user_publications_path(@user)
                            : user_publication_path(@user, publication) do |f| %>
  <div class="row">
    <div class="col-md-4">
      <%= f.association :user, as: :hidden %>
      <%= f.input :title,
                  label: 'Titre',
                  as: :text %>
      <%= f.association :group,
                        label: 'Promotion',
                        label_method: -> (student) { student.group.name_with_program },
                        include_blank: false,
                        collection: @groups %>
      <%= f.input :published,
                  label: 'PubliÃ©e' %>
    </div>
    <div class="col-md-8">
      <%= f.input :content,
                  label: 'Contenu',
                  as: :trix_editor %>
    </div>
  </div>
  <%= save_button f %>
  <%= destroy_button [@user, publication] %>
<% end %>
