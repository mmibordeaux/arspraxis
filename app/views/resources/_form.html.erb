<%= simple_form_for(@resource) do |f| %>
  <div class="row">
    <div class="col-md-4">
      <%= f.input :name %>
    </div>
    <div class="col-md-8">
      <%= f.input :description %>
    </div>
  </div>
  <%= f.association :competency, as: :hidden %>
  <%= f.submit 'Enregistrer', class: 'btn btn-primary btn-sm' %>
<% end %>
